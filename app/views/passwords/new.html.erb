<div id="clearance" class="password-reset form-signin">
  <h2><%= t(".title") %></h2>

  <p><%= t(".description") %></p>

  <%= form_for :password, url: passwords_path do |form| %>
    <div class="form-group">
      <%= form.label :email %>
      <%= form.text_field :email, type: 'email', class: 'form-control' %>
    </div>

    <div class="submit-field">
      <%= form.submit class: 'btn btn-lg btn-primary btn-block' %>
    </div>
  <% end %>
</div>

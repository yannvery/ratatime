<p id="notice"><%= notice %></p>

<h1>Trackers</h1>

<table>
  <thead>
    <tr>
      <th>Logged date</th>
      <th>Project</th>
      <th>Duration</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trackers.each do |tracker| %>
      <tr>
        <td><%= tracker.logged_date %></td>
        <td><%= tracker.project_name %></td>
        <td><%= tracker_duration(tracker.duration_time) %></td>
        <td><%= tracker.description %></td>
        <td><%= link_to 'Show', tracker %></td>
        <td><%= link_to 'Edit', edit_tracker_path(tracker) %></td>
        <td><%= link_to 'Destroy', tracker, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

